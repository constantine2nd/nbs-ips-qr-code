{
  "name": "nbs-ips-qr-code",
  "version": "1.0.0",
  "description": "Jekyll GUI wrapper for NBS IPS QR Code API - Generate and validate Serbian National Bank IPS QR codes",
  "main": "index.js",
  "scripts": {
    "start": "bundle exec jekyll serve --livereload",
    "build": "bundle exec jekyll build",
    "dev": "bundle exec jekyll serve --livereload --incremental --force_polling",
    "clean": "bundle exec jekyll clean",
    "format": "prettier --write \"**/*.{html,css,js,json,md}\"",
    "format:js": "prettier --write \"assets/js/**/*.js\"",
    "format:html": "prettier --write \"**/*.html\"",
    "lint": "eslint assets/js/**/*.js",
    "lint:fix": "eslint assets/js/**/*.js --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:rebuild": "docker-compose down && docker-compose build --no-cache && docker-compose up -d"
  },
  "keywords": [
    "jekyll",
    "nbs",
    "ips",
    "qr-code",
    "serbian-banking",
    "payment-system",
    "api-wrapper",
    "gui",
    "bootstrap",
    "javascript"
  ],
  "author": "NBS IPS QR Code Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/constantine2nd/nbs-ips-qr-code.git"
  },
  "bugs": {
    "url": "https://github.com/constantine2nd/nbs-ips-qr-code/issues"
  },
  "homepage": "https://github.com/constantine2nd/nbs-ips-qr-code#readme",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.5"
  },
  "dependencies": {},
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.js"
    ],
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "assets/js/**/*.js",
      "!assets/js/**/*.min.js"
    ]
  },
  "prettier": {
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "es5",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "htmlWhitespaceSensitivity": "css",
    "endOfLine": "lf"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "prettier/prettier": "error",
      "no-unused-vars": "warn",
      "no-console": "warn",
      "prefer-const": "error",
      "no-var": "error"
    },
    "globals": {
      "bootstrap": "readonly",
      "TemplateManager": "readonly",
      "NBSApp": "readonly",
      "NBSAPI": "readonly"
    }
  }
}
